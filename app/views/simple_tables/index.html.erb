<p id="notice"><%= notice %></p>

<h1>Listing Simple Tables</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Website</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Category</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @simple_tables.each do |simple_table| %>
      <tr>
        <td><%= simple_table.name %></td>
        <td><%= simple_table.address %></td>
        <td><%= simple_table.phone %></td>
        <td><%= simple_table.website %></td>
        <td><%= simple_table.latitude %></td>
        <td><%= simple_table.longitude %></td>
        <td><%= simple_table.category_id %></td>
        <td><%= image_tag simple_table.avatar1.url(:thumb) %></td>
        <td><%= link_to 'Show', simple_table %></td>
        <td><%= link_to 'Edit', edit_simple_table_path(simple_table) %></td>
        <td><%= link_to 'Destroy', simple_table, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

