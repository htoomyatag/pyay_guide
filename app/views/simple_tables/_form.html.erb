
<%= form_for @simple_table, :html => {:class => "form-horizontal", :multipart => true } do |f| %>

        <div class="form-group">
            <label class="col-md-3 control-label">Name</label>
            <div class="col-md-9">
              <%= f.text_field :name %>
            </div>
        </div>


 <div class="form-group">
            <label class="col-md-3 control-label">Address</label>
            <div class="col-md-9">
    <%= f.text_field :address %>
       </div>
        </div>

 <div class="form-group">
            <label class="col-md-3 control-label">Phone</label>
            <div class="col-md-9">
    <%= f.text_field :phone %>
       </div>
        </div>


         <div class="form-group">
            <label class="col-md-3 control-label">Option Phone</label>
            <div class="col-md-9">
    <%= f.text_field :option_phone1 %>
       </div>
        </div>

   <div class="form-group">
    <label class="col-md-3 control-label">Option Phone</label>
            <div class="col-md-9">
    <%= f.text_field :option_phone2 %>
       </div>
        </div>






 <div class="form-group">
            <label class="col-md-3 control-label">Website</label>
            <div class="col-md-9">
    <%= f.text_field :website %>
        </div>
        </div>
 <div class="form-group">
            <label class="col-md-3 control-label">latitude</label>
            <div class="col-md-9">
    <%= f.text_field :latitude %>
       </div>
        </div>
 <div class="form-group">
            <label class="col-md-3 control-label">longitude</label>
            <div class="col-md-9">
    <%= f.text_field :longitude %>
       </div>
        </div>

 <div class="form-group" style="display:none;">
            <label class="col-md-3 control-label">Category</label>
            <div class="col-md-9">
    <%= f.text_field :category_id, :value => params[:category] %>
       </div>
        </div>


        <div class="form-group">
            <label class="col-md-3 control-label"> Image Upload</label>
            <div class="col-md-9">
    <%= f.file_field :avatar1 %>
    </div>
        </div>


            <div class="form-group">
            <label class="col-md-3 control-label">  Image Upload</label>
            <div class="col-md-9">
    <%= f.file_field :avatar2 %>
    </div>
        </div>


            <div class="form-group">
            <label class="col-md-3 control-label">  Image Upload</label>
            <div class="col-md-9">
    <%= f.file_field :avatar3 %>
    </div>
        </div>


            <div class="form-group">
            <label class="col-md-3 control-label">  Image Upload</label>
            <div class="col-md-9">
    <%= f.file_field :avatar4 %>
    </div>
        </div>



            <div class="form-group">
            <label class="col-md-3 control-label"> Image Upload</label>
            <div class="col-md-9">
    <%= f.file_field :avatar5 %>
    </div>
        </div>


      <div class="form-group">
            <label class="col-md-3 control-label"> Description</label>
            <div class="col-md-9">
                <%= f.text_area :description %>
    </div>
        </div>


 <% if params[:category] == "computer" %>
        

  <div class="form-group">
    <label class="col-md-3 control-label"> computer category</label>
            <div class="col-md-9">
     <%= f.select(:computer_category, SimpleTable::COMCATEGORY) %>
       </div>
        </div>

 <% end %>

<div class="row">
          <div class="col-md-offset-3 col-md-9">
            <%= f.submit :class=>"btn blue" %>
            <button type="button" class="btn default">Cancel</button>
          </div>
        </div>
<% end %>
