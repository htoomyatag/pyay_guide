<div class="portlet box blue">
            <div class="portlet-title">
              <div class="caption">
              Restaurant listings
              </div>
            </div>

            <div class="portlet-body form">
                
                <br/>
                <p style="padding-left:20px;">
                  <%= link_to 'New Restaurant', new_restaurant_path, :class => "btn btn-default" %>
                </p>
          <table class="table table-bordered" style="padding:30px;" >
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Phone</th>
              <th>Address</th>
              <th colspan="3"></th>
            </tr>
          </thead>
  <tbody>
    <% @restaurants.each do |restaurant| %>
        <tr class="tablerow">
                  <td><input id="aok"></td>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.phone %></td>
        <td><%= restaurant.address %></td>
       
        <td><%= link_to 'Show', restaurant %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
          </table>

             <div class="container">
              <%= will_paginate @restaurants %>
            </div>

          </div>
</div>



<script type="text/javascript">
      window.onload = function () {

       $('.tablerow').each(function (i) {
              $("td:first", this).html(i + 1);
         });

     };

</script>