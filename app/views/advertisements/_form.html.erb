

<%= form_for @advertisement, :html => {:class => "form-horizontal", :multipart => true } do |f| %>

 <div class="form-group">
            <label class="col-md-3 control-label">Category</label>
            <div class="col-md-9">
       <%= f.select(:category, Advertisement::CATEGORY) %>
  </div>
    </div>


     <div class="form-group">
            <label class="col-md-3 control-label">Category</label>
            <div class="col-md-9">
       <%= f.select(:main_ads, Advertisement::MAINADS) %>
  </div>
    </div>



    

 <div class="form-group">
            <label class="col-md-3 control-label">Shop</label>
            <div class="col-md-9">
    <%= f.text_field :shop_id %>
  </div>
    </div>
 

        <div class="form-group">
            <label class="col-md-3 control-label"> Image Upload</label>
            <div class="col-md-9">
    <%= f.file_field :avatar1 %>
    </div>
        </div>



<div class="row">
          <div class="col-md-offset-3 col-md-9">
            <%= f.submit :class=>"btn blue" %>
            <button type="button" class="btn default">Cancel</button>
          </div>
        </div>
<% end %>
