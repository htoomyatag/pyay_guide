
<div class="portlet box blue">
            <div class="portlet-title">
              <div class="caption">
              Airlines listings
              </div>
            </div>

            <div class="portlet-body form">
          			
            		<br/>
            		<p style="padding-left:20px;">
					<%= link_to 'New airline', new_airline_path, :class => "btn btn-default" %></p>
					<table class="table table-bordered" style="padding:30px;">
					  <thead>
					    <tr>
					      <th>ID</th>
					      <th>Name</th>
					      <th>Phone</th>
					      <th>Address</th>
					      <th colspan="4"></th>
					    </tr>
					  </thead>

					  <tbody >
					    <% @airlines.each do |airline| %>
					      <tr class="tablerow">
					        <td><input id="aok"></td>
					        <td><%= airline.name %></td>
					        <td><%= airline.phone %></td>
					        <td><%= airline.address %></td>
					        <td><%= link_to 'Add', airline_route_path(:id => airline) %></td>
					        <td><%= link_to 'Show', airline %></td>
					        <td><%= link_to 'Edit', edit_airline_path(airline) %></td>
					        <td><%= link_to 'Destroy', airline, method: :delete, data: { confirm: 'Are you sure?' } %></td>
					      </tr>
					    <% end %>
					  </tbody>
					</table>

            </div>
</div>



<script type="text/javascript">
	    window.onload = function () {

       $('.tablerow').each(function (i) {
              $("td:first", this).html(i + 1);
         });

     };

</script>