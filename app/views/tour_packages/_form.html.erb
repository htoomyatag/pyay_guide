<%= form_for @tour_package, :html => {:class => "form-horizontal" } do |f| %>


  <% if @tour_package.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tour_package.errors.count, "error") %> prohibited this tour_package from being saved:</h2>

      <ul>
      <% @tour_package.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-body">
      <div class="form-group">
        <label class="col-md-3 control-label">Package name</label>
            <div class="col-md-9">
             <%= f.text_field :package_name,  :class =>"form-control" %>
           </div>
      </div>


      <div class="form-group">
        <label class="col-md-3 control-label">Price</label>
            <div class="col-md-9">
             <%= f.text_field :price,  :class =>"form-control" %>
           </div>
      </div>

      <div class="form-group">
        <label class="col-md-3 control-label">Detail</label>
            <div class="col-md-9">
             <%= f.text_area :detail,  :class =>"form-control" %>
           </div>
      </div>

      <div class="form-group">
        <label class="col-md-3 control-label">Duration</label>
            <div class="col-md-9">
             <%= f.text_area :duration,  :class =>"form-control" %>
           </div>
      </div>

        <div class="form-group">
        <label class="col-md-2 control-label">Logo</label>
          <div class="col-md-9">
             <%= f.file_field :avatar,  :class =>"form-control" %>
          </div>
    </div>

    

        <div class="row">
          <div class="col-md-offset-3 col-md-9">
            <%= f.submit :class=>"btn blue" %>
            <button type="button" class="btn default">Cancel</button>
          </div>
        </div>
<% end %>
