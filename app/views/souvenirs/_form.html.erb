<%= form_for @souvenir, :html => {:class => "form-horizontal", :multipart => true } do |f| %>


  <% if @souvenir.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@souvenir.errors.count, "error") %> prohibited this delivery from being saved:</h2>

      <ul>
      <% @souvenir.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="form-body">
 <div class="form-group">
            <label class="col-md-3 control-label">Name</label>
            <div class="col-md-9">
    <%= f.text_field :name,  :class =>"form-control" %>
     </div>
        </div>
 <div class="form-group">
            <label class="col-md-3 control-label">Phone</label>
            <div class="col-md-9">
    <%= f.text_field :phone,  :class =>"form-control" %>
     </div>
        </div>


 <div class="form-group">
            <label class="col-md-3 control-label">Region</label>
            <div class="col-md-9">

              <%=  f.select :region, options_for_select(@city_list,@souvenir.region),{prompt: 'Choose'} %>
      </div>
  </div>

   <div class="form-group">
            <label class="col-md-3 control-label">Township</label>
            <div class="col-md-9">
    <%= f.text_field :township,  :class =>"form-control" %>
      </div>
  </div>



    <div class="form-group">
            <label class="col-md-3 control-label">Type</label>
            <div class="col-md-9">
    <%= f.text_field :category,  :class =>"form-control" %>
      </div>
  </div>

    <div class="form-group">
        <label class="col-md-2 control-label">Logo</label>
          <div class="col-md-9">
             <%= f.file_field :avatar,  :class =>"form-control" %>
          </div>
    </div>

    <div class="row">
          <div class="col-md-offset-3 col-md-9">
            <%= f.submit :class=>"btn blue" %>
            <button type="button" class="btn default">Cancel</button>
          </div>
        </div>
  
  <br/>

<% end %>
