
<%= form_for @hotel, :html => {:class => "form-horizontal", :multipart => true } do |f| %>



 <div class="form-group">
            <label class="col-md-3 control-label">Name</label>
            <div class="col-md-9">
    <%= f.text_field :name %>
     </div>
        </div>

 <div class="form-group">
            <label class="col-md-3 control-label">Address</label>
            <div class="col-md-9">
    <%= f.text_field :address %>
     </div>
        </div>

 <div class="form-group">
            <label class="col-md-3 control-label">Phone</label>
            <div class="col-md-9">
    <%= f.text_field :phone %>
     </div>
        </div>


                 <div class="form-group">
            <label class="col-md-3 control-label">Option Phone</label>
            <div class="col-md-9">
    <%= f.text_field :option_phone1 %>
       </div>
        </div>

    <div class="form-group">
    <label class="col-md-3 control-label">Option Phone</label>
            <div class="col-md-9">
    <%= f.text_field :option_phone2 %>
       </div>
        </div>


 <div class="form-group">
            <label class="col-md-3 control-label">Website</label>
            <div class="col-md-9">
    <%= f.text_field :website %>
     </div>
        </div>

 <div class="form-group">
            <label class="col-md-3 control-label">Latitude</label>
            <div class="col-md-9">
    <%= f.text_field :latitude %>
     </div>
        </div>

 <div class="form-group">
            <label class="col-md-3 control-label">Longitude</label>
            <div class="col-md-9">
    <%= f.text_field :longitude %>
     </div>
        </div>

 <div class="form-group">
            <label class="col-md-3 control-label">Hoteltype</label>
            <div class="col-md-9">
      <%= f.select(:hoteltype, Hotel::HOTELCATEGORY) %>
     </div>
        </div>


        

         <div class="form-group">
            <label class="col-md-3 control-label"> Image Upload</label>
            <div class="col-md-9">
    <%= f.file_field :avatar1 %>
            <%= image_tag @hotel.avatar1.url(:thumb) %>
    </div>
        </div>


            <div class="form-group">
            <label class="col-md-3 control-label">  Image Upload</label>
            <div class="col-md-9">
    <%= f.file_field :avatar2 %>
     <%= image_tag @hotel.avatar2.url(:thumb) %>
    </div>
        </div>


            <div class="form-group">
            <label class="col-md-3 control-label">  Image Upload</label>
            <div class="col-md-9">
    <%= f.file_field :avatar3 %>
     <%= image_tag @hotel.avatar3.url(:thumb) %>
    </div>
        </div>


            <div class="form-group">
            <label class="col-md-3 control-label">  Image Upload</label>
            <div class="col-md-9">
    <%= f.file_field :avatar4 %>
     <%= image_tag @hotel.avatar4.url(:thumb) %>
    </div>
        </div>



            <div class="form-group">
            <label class="col-md-3 control-label"> Image Upload</label>
            <div class="col-md-9">
    <%= f.file_field :avatar5 %>
     <%= image_tag @hotel.avatar5.url(:thumb) %>
    </div>
        </div>



      <div class="form-group">
            <label class="col-md-3 control-label"> Description</label>
            <div class="col-md-9">
                <%= f.text_area :description %>
    </div>
        </div>




<div class="row">
          <div class="col-md-offset-3 col-md-9">
            <%= f.submit :class=>"btn blue" %>
             <a href="/hotels" class="btn default" role="button"> Cancel </a>

          </div>
        </div>
<% end %>

