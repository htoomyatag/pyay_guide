



<div class="portlet box blue">
            <div class="portlet-title">
              <div class="caption">
              Informations listings
              </div>
            </div>

            <div class="portlet-body form">
                
                <br/>
                <p style="padding-left:20px;font-size:14px;">
                Hotel informations
              </p>
          <table class="table table-bordered" style="padding:30px;" >
             <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Website</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Hoteltype</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hotels.each do |hotel| %>
       <tr class="tablerow">
        <td><input id="aok"></td>
        <td><%= hotel.name %></td>
        <td><%= hotel.address %></td>
        <td><%= hotel.phone %></td>
        <td><%= hotel.website %></td>
        <td><%= hotel.latitude %></td>
        <td><%= hotel.longitude %></td>
        <td><%= hotel.hoteltype %></td>
        <td><%= image_tag hotel.avatar1.url(:thumb) %></td>
        <td><%= link_to 'Edit', edit_hotel_path(hotel) %></td>
        <td><%= link_to 'Destroy', hotel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

            </div>
</div>

<script type="text/javascript">
      window.onload = function () {

       $('.tablerow').each(function (i) {
              $("td:first", this).html(i + 1);
         });

     };

</script>