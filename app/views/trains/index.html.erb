
<div class="portlet box blue">
            <div class="portlet-title">
              <div class="caption">
              trains listings
              </div>
            </div>

            <div class="portlet-body form">
                
                <br/>
                <p style="padding-left:20px;">
          <%= link_to 'New train', new_train_path, :class => "btn btn-default" %></p>
          <table class="table table-bordered" style="padding:30px;" >
            <thead>
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Phone</th>
                <th>Address</th>
                <th colspan="4"></th>
              </tr>
            </thead>

            <tbody>
              <% @trains.each do |train| %>
                  <tr class="tablerow">
                  <td><input id="aok"></td>

                  <td><%= train.name %></td>
                  <td><%= train.phone %></td>
                  <td><%= train.address %></td>
                  <td><%= link_to 'Add', train_route_path(:id => train) %></td>
                  <td><%= link_to 'Show', train %></td>
                  <td><%= link_to 'Edit', edit_train_path(train) %></td>
                  <td><%= link_to 'Destroy', train, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

            </div>
</div>



<script type="text/javascript">
      window.onload = function () {

       $('.tablerow').each(function (i) {
              $("td:first", this).html(i + 1);
         });

     };

</script>